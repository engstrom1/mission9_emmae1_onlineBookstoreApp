@page
@model onlineBookstoreApp.Pages.PurchaseModel
@{
}


<h3>Your Cart</h3>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>$@i.Book.Price</td>
                    <td>$@(i.Quantity * i.Book.Price)</td>
                </tr>
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3"> Total: </td>
            <td>$@Model.basket.CalculateTotal()</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>